<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ActivityOne">

    <Button android:text="@string/goto_contacts_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonGetContacts"
        android:layout_above="@+id/buttonGetApps"
        android:onClick="onButtonClick"
        />

    <Button
        android:text="@string/goto_applist_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonGetApps"
        android:layout_centerVertical="true"
        android:onClick="onButtonClick"
        />

    <Button
        android:text="start Service"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/buttonStartService"
        android:layout_below="@+id/buttonGetApps"
        android:onClick="onButtonClick"
        />

</RelativeLayout>
